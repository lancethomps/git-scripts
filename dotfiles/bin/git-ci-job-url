#!/usr/bin/env bash
################################################################### SETUP ########################################################################
if ! _SCRIPT_DIR="$(get_script_dir "${BASH_SOURCE[0]}")"; then echo "Error while running: _SCRIPT_DIR=\"\$(get_script_dir \"${BASH_SOURCE[0]}\")\"" && exit 1; fi
# shellcheck source=./.command_defaults.sh
source "${_SCRIPT_DIR}/.command_defaults.sh" || exit 1
##################################################################################################################################################

git check-supported-ci-types "${CI_GITHUB}" "${CI_JENKINS}" "${CI_TRAVIS}"

################################################################### USAGE ########################################################################
_SCRIPT_NAME="$(basename "$0")"

function _usage() {
  local SYNOP_INDENT
  SYNOP_INDENT="$(head -c "$(echo -n "${_SCRIPT_NAME}" | wc -c)" </dev/zero | tr '\0' " ")"

  cat <<EOF
NAME
       ${_SCRIPT_NAME}

SYNOPSIS
       ${_SCRIPT_NAME} [--branch | --pr | --tag] [<passthrough_arg>...]
       ${SYNOP_INDENT} [--help]

EXAMPLES
       ${_SCRIPT_NAME}
EOF
}
##################################################################################################################################################

################################################################# SCRIPTARGS #####################################################################
PASSTHROUGH_ARGS=()
while test $# -gt 0; do
  case "$1" in
    -h | --help)
      _usage
      exit 0
      ;;
    --branch)
      export JOB_URL_TYPE=branch
      shift
      ;;
    --pr)
      export JOB_URL_TYPE=pr
      shift
      ;;
    --tag)
      export JOB_URL_TYPE=tag
      shift
      ;;
    --)
      shift
      PASSTHROUGH_ARGS+=("$@")
      shift "$#"
      break
      ;;
    *)
      PASSTHROUGH_ARGS+=("$1")
      shift
      ;;
  esac
done
##################################################################################################################################################

function run_travis() {
  echo "https://app.travis-ci.com/$(git ui-url-project)/$(git ui-url-repo)"
}

function run_github() {
  echo "$(git ui-url-root)/actions"
}

function run_jenkins() {
  jenkins_job_url_from_repo "$@"
}

"run_$(git ci-type)" "${PASSTHROUGH_ARGS[@]}"
