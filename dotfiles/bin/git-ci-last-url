#!/usr/bin/env bash
################################################################### SETUP ########################################################################
set -o errexit -o errtrace -o nounset
##################################################################################################################################################

ci_last_args=()

################################################################# FILTERARGS #####################################################################
PASSTHROUGH_ARGS=()
while test $# -gt 0; do
  case "$1" in
    --branch)
      export JOB_URL_TYPE=branch
      ci_last_args+=("$1")
      shift
      ;;
    --pr)
      export JOB_URL_TYPE=pr
      ci_last_args+=("$1")
      shift
      ;;
    --tag)
      export JOB_URL_TYPE=tag
      ci_last_args+=("$1")
      shift
      ;;
    --open)
      open=true
      shift
      ;;
    --wait-until-found)
      export wait_until_found=true
      ci_last_args+=("$1")
      shift
      ;;
    *)
      PASSTHROUGH_ARGS+=("$1")
      shift
      ;;
  esac
done
##################################################################################################################################################

set -o pipefail
build_url="$(git ci-last "${ci_last_args[@]}" | jq --raw-output --exit-status '.url')"
set +o pipefail

echo "$build_url"

if test "${open-}" = "true"; then
  if test "${#PASSTHROUGH_ARGS[@]}" -ne 0; then
    build_url="${build_url}${PASSTHROUGH_ARGS[*]}"
  fi
  open "$build_url"
fi

exit 0
