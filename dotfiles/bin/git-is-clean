#!/usr/bin/env bash
################################################################### SETUP ########################################################################
set -o errexit -o errtrace -o nounset
##################################################################################################################################################

git_diff_args=(--no-ext-diff --quiet)

################################################################# FILTERARGS #####################################################################
PASSTHROUGH_ARGS=()
while test $# -gt 0; do
  case "$1" in
    --no-head)
      no_head=true
      shift
      ;;
    *)
      PASSTHROUGH_ARGS+=("$1")
      shift
      ;;
  esac
done
##################################################################################################################################################

if test "${no_head-}" != "true"; then
  git_diff_args+=(HEAD)
fi

git_diff_args+=("${PASSTHROUGH_ARGS[@]}")

if git diff "${git_diff_args[@]}" && ! git has-untracked; then
  exit 0
else
  exit 1
fi
