#!/usr/bin/env bash
################################################################### SETUP ########################################################################
if ! _SCRIPT_DIR="$(get_script_dir "${BASH_SOURCE[0]}")"; then echo "Error while running: _SCRIPT_DIR=\"\$(get_script_dir \"${BASH_SOURCE[0]}\")\"" && exit 1; fi
# shellcheck source=./.git_command_defaults.sh
source "${_SCRIPT_DIR}/.git_command_defaults.sh" || exit 1
##################################################################################################################################################

################################################################# FILTERARGS #####################################################################
PASSTHROUGH_ARGS=()
while test $# -gt 0; do
  case "$1" in
    --auto-confirm)
      auto_confirm=true
      shift
      ;;
    *)
      PASSTHROUGH_ARGS+=("$1")
      shift
      ;;
  esac
done
##################################################################################################################################################

git_clean_args=(
  -d
  --force
  "${PASSTHROUGH_ARGS[@]}"
)

git clean --dry-run "${git_clean_args[@]}"
echo_sep

if confirm_with_auto 'Trash (trash -Fv) above untracked files?'; then
  mapfile -t trash_files < <(git clean --dry-run "${git_clean_args[@]}" | sed -E 's/^Would remove //')
  trash -Fv "${trash_files[@]}"
fi
